<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.melhores.MelhoresActivity"
    android:background="@color/black">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEsquecesenha"
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:background="@color/Secundaria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Esqueceu sua senha?"
            app:titleTextColor="@color/white">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviaremos um e-mail para recuperar a sua senha, favor digitar seu e-mail abaixo:"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <EditText
            android:id="@+id/edEmailSenhaEsquecida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:textColor="@color/purple_200"
            android:theme="@style/EditTextTheme"
            android:layout_marginEnd="10dp"
            />


        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_login_button"
            android:text="Confirmar"
            android:textColor="@color/White"
            android:textSize="20dp" />
    </LinearLayout>
    </LinearLayout>