<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="inherit"
    android:textDirection="ltr"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:verticalScrollbarPosition="right">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagemPer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_user_photo" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/viewNomeCompleto"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Completo"/>
        <TextView
            android:id="@+id/nomeCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:textColor="@color/purple_200"
            android:theme="@style/EditTextTheme"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/viewNomeUsuario"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editText_nomeUsuario_configuracoes"/>
        <TextView
            android:id="@+id/nomeDoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:textColor="@color/purple_200"
            android:theme="@style/EditTextTheme"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"/>
        <TextView
            android:id="@+id/emailVis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:textColor="@color/purple_200"
            android:theme="@style/EditTextTheme"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_login_button"
            android:text="Alterar dados"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnSairDaConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_login_button"
            android:text="@string/botao_sair_configuracoes"
            android:textColor="@color/White"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>